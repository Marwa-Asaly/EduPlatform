@using EduPlatformProject.Resources
@using Microsoft.Extensions.Localization
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = localizer["CreateExam"];
}
@inject IStringLocalizer<SharedResources> localizer

<section class="my-5 py-5">
    <div class="d-flex justify-content-center">
        <div class="col-md-6 p-3 shadow rounded bg-light">
            <h3 class="text-center">@ViewData["Title"]</h3>
            <form class="d-flex flex-column gap-4 mt-4" action="/home/createExam" method="post">
                <input class="form-control" placeholder="@localizer["Title_ar"]" type="text" name="title_ar" dir="rtl" required />
                <input class="form-control" placeholder="@localizer["Title_tr"]" type="text" name="title_tr" dir="ltr" required />
                <input class="form-control" placeholder="@localizer["Desc_ar"]" type="text" name="content_ar" dir="rtl" required />
                <input class="form-control" placeholder="@localizer["Desc_tr"]" type="text" name="content_tr" dir="ltr" required />
                <div class="d-flex flex-column gap-3">
                    <div class="d-flex flex-column">
                        <input class="form-control" name="q1" placeholder="@localizer["Question_ar"] (@localizer["MultipleChoice"]) - 1" />
                        <input class="form-control" name="q11" placeholder="@localizer["Answer"] - 1" />
                        <input class="form-control" name="q12" placeholder="@localizer["Answer"] - 2" />
                        <input class="form-control" name="q13" placeholder="@localizer["Answer"] (@localizer["CorrectAnswerHere"]) - 3" />
                    </div>
                    <div class="d-flex flex-column">
                        <input class="form-control" name="q2" placeholder="@localizer["Question_tr"] (@localizer["MultipleChoice"]) - 2" />
                        <input class="form-control" name="q21" placeholder="@localizer["Answer"] - 1" />
                        <input class="form-control" name="q22" placeholder="@localizer["Answer"] - 2" />
                        <input class="form-control" name="q23" placeholder="@localizer["Answer"] (@localizer["CorrectAnswerHere"]) - 3" />
                    </div>
                    <div class="d-flex flex-column">
                        <input class="form-control" name="q3" placeholder="@localizer["Question_ar"] - 3" />
                        <input class="form-control" name="q31" placeholder="@localizer["CorrectAnswerHere"]" />
                    </div>
                    <div class="d-flex flex-column">
                        <input class="form-control" name="q4" placeholder="@localizer["Question_tr"] - 3" />
                        <input class="form-control" name="q41" placeholder="@localizer["CorrectAnswerHere"]" />
                    </div>
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="text-center text-danger">@ViewBag.Error</div>
                }
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary">@ViewData["Title"]</button>
                </div>
            </form>
        </div>
    </div>
</section>