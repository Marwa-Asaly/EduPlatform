@using EduPlatformProject.Resources
@using Microsoft.Extensions.Localization
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = localizer["Login"];
}
@inject IStringLocalizer<SharedResources> localizer;

<section class="my-5 py-5">
    <div class="d-flex justify-content-center">
        <div class="col-md-6 p-3 shadow rounded bg-light">
            <h3 class="text-center">@localizer["Login"]</h3>
            <form class="d-flex flex-column gap-4 mt-4" action="/auth/login" method="post">
                <input class="form-control" placeholder="@localizer["Email"]" type="email" name="email" dir="ltr" required />
                <input class="form-control" placeholder="@localizer["Password"]" type="password" name="password" dir="ltr" required />
                <div>
                    <a href="/auth/forgotPassword">@localizer["ForgotPassword"]</a>
                </div>
                @if(ViewBag.Error != null)
                {
                    <div class="text-center text-danger">@ViewBag.Error</div>
                }
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary">@localizer["Login"]</button>
                </div>
            </form>
        </div>
    </div>
</section>